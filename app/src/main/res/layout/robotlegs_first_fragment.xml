<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#ffffffff">

    <ImageView
        android:id="@+id/first_iv"
        android:visibility="invisible"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_margin="16dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/img_mm_1"/>

    <TextView
        android:id="@+id/first_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:layout_below="@id/first_iv"
        android:layout_centerInParent="true"/>

    <Button
        android:id="@+id/first_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/first_tv"
        android:layout_centerInParent="true"
        android:text="Login"/>

    <TextView
        android:id="@+id/first_controller_tv"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:layout_below="@id/first_bt"
        android:layout_centerInParent="true"
        android:text="Controller call me show"/>

</RelativeLayout>
